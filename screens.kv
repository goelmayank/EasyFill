#:kivy 1.8.0

<CameraScreen>:

    BoxLayout:
        size: root.size
        spacing: 10
        padding: 10
        orientation: 'vertical'
        Camera:
            id: camera
            resolution: (1080, 540)
            play: True
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '60dp'
            on_press: root.capture()
            on_release: root.manager.current = "control_screen"

<ControlScreen>:       

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 10
        padding: 10

        BoxLayout:
            orientation: "horizontal"
            size: root.size
            spacing: 10
            padding: 10

            Button:
                id: "help"
                text: "HELP"
                on_press: root.help()
            Button:
                id: "print_end"
                text: "PRINT"
                on_press: root.print_end()

        BoxLayout:
            orientation: "horizontal"
            size: root.size
            spacing: 10
            padding: 10

            Button:
                id: "back"
                text: "BACK"
                on_press: root.goBack()
            Button:
                id: "next / FILL"
                text: "NEXT"
                on_press: root.goNext()
        BoxLayout:
            orientation: "horizontal"
            size: root.size
            spacing: 10
            padding: 10

            Button:
                id: "repeat"
                text: "REPEAT"
                on_press: root.repeatSound()
            Button:
                id: "fill"
                text: "FILL"
                on_press: root.fill()


<PrintScreen>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 10
        padding: 10

        Label:
            text: "Welcome to EasyFill!"
        Button:
            id: "Capture"
            text: "Button 1"
            on_release:
                root.manager.current = "control_screen"

<Manager>:
    id: screen_manager

    camera_screen: camera_screen
    control_screen: control_screen
    print_screen: print_screen

    CameraScreen:
        id: camera_screen
        name: "camera_screen"
        manager: screen_manager

    ControlScreen:
        id: control_screen
        name: "control_screen"
        manager: screen_manager

    PrintScreen:
        id: print_screen
        name: "print_screen"
        manager: screen_manager