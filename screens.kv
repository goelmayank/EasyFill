#:kivy 1.8.0

<CameraScreen>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Welcome to EasyFill!"
        Button:
            id: "Capture"
            text: "Button 1"
            on_release:
                root.manager.current = "control_screen"

<ControlScreen>:        

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 10
        padding: 10

        Button:
            id: "repeat"
            text: "REPEAT"

        BoxLayout:
            orientation: "horizontal"
            size: root.size
            spacing: 10
            padding: 10

            Button:
                id: "back"
                text: "BACK"
            Button:
                id: "next / FILL"
                text: "NEXT"


<PrintScreen>:

    BoxLayout:
        orientation: "vertical"
        size: root.size
        spacing: 20
        padding: 20

        Label:
            text: "Welcome to EasyFill!"
        Button:
            id: "Capture"
            text: "Button 1"
            on_release:
                root.manager.current = "control_screen"

<Manager>:
    id: screen_manager

    camera_screen: camera_screen
    control_screen: control_screen
    print_screen: print_screen

    CameraScreen:
        id: camera_screen
        name: "camera_screen"
        manager: screen_manager

    ControlScreen:
        id: control_screen
        name: "control_screen"
        manager: screen_manager

    PrintScreen:
        id: print_screen
        name: "print_screen"
        manager: screen_manager